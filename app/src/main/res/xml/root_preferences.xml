<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:textColor="#000000"
        app:title="@string/settings_header">

        <PreferenceCategory android:title="General">

        </PreferenceCategory>

        <SwitchPreferenceCompat
            app:key="distance"
            app:title="@string/distance_title"
            app:defaultValue="@string/distance_summary_off"
            app:summaryOff="@string/distance_summary_off"
            app:summaryOn="@string/distance_summary_on"/>
        <SwitchPreferenceCompat
            app:key="alerts switch"
            app:title="@string/Alerts_title"
            app:defaultValue="@string/automaticAlertsRemoval_summary_off"
            app:summaryOff="@string/automaticAlertsRemoval_summary_off"
            app:summaryOn="@string/automaticAlertsRemoval_summary_on"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notifications_header">

        <SwitchPreferenceCompat
            app:key="notifications switch"
            app:title="@string/notifications_title"
            app:defaultValue="@string/notification_summary_off"
            app:summaryOff="@string/notification_summary_off"
            app:summaryOn="@string/notification_summary_on"/>

        <ListPreference
            android:layout_width="match_parent"
            app:defaultValue="Notifications on all alerts"
            app:entries="@array/notification_entries"
            app:entryValues="@array/notification_values"
            app:key="notification"
            app:title="@string/notifications_title2"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/location_header">

        <CheckBoxPreference
            app:key="location"
            app:title="@string/location_title"
            app:summaryOff="@string/location_summary_off"
            app:summaryOn="@string/location_summary_on"/>

    </PreferenceCategory>
    <PreferenceCategory app:chipgroup = "Types of Crimes:">


    </PreferenceCategory>
</PreferenceScreen>