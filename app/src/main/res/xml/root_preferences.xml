<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:textColor="#000000"
        app:title="@string/settings_header">

        <PreferenceCategory android:title="Preference category">

        </PreferenceCategory>
        <SwitchPreferenceCompat
            app:key="distance"
            app:title="@string/distance_title"
            app:defaultValue="@string/distance_summary_off"
            app:summaryOff="@string/distance_summary_off"
            app:summaryOn="@string/distance_summary_on"/>

        <EditTextPreference
            android:defaultValue="Default value"
            android:key="edit_text_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Edit text preference" />

        <EditTextPreference
            android:defaultValue="Default value"
            android:key="edit_text_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Edit text preference" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notifications_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Notifications on all Alerts"
            app:entries="@array/notification_entries"
            app:entryValues="@array/notification_values"
            app:key="notification"
            app:title="@string/notifications_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/location_header">

        <CheckBoxPreference
            app:key="location"
            app:title="@string/location_title"
            app:summaryOff="@string/location_summary_off"
            app:summaryOn="@string/location_summary_on"/>

    </PreferenceCategory>
</PreferenceScreen>