<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:textColor="#000000"
        app:title="@string/settings_header">

        <PreferenceCategory android:title="General">

        </PreferenceCategory>

        <Preference
            android:summary="Click to go to the Emergency VCU Numbers page"
            android:title="Emergency VCU Phone Numbers">
            <intent
                android:action="android.intent.action.PICK_ACTIVITY"
                android:targetClass="com.vcu.teamnapp.EmergencyVCUNumbersActivity"
                android:targetPackage="com.vcu.teamnapp" />
        </Preference>
        <Preference
            android:summary="Choose alerts to display"
            android:title="Alert Types">
            <intent
                android:action="android.intent.action.PICK_ACTIVITY"
                android:targetClass="com.vcu.teamnapp.CrimeChipGroup"
                android:targetPackage="com.vcu.teamnapp" />
        </Preference>
        <Preference
            android:summary="just text view without chip group"
            android:title="Alert Types">
            <intent
                android:action="android.intent.action.PICK_ACTIVITY"
                android:targetClass="com.vcu.teamnapp.ChipGroup"
                android:targetPackage="com.vcu.teamnapp" />
        </Preference>

        <Preference
            android:summary="Choose the distance from 0.2 mile to 1 mile in radius "
            android:title="@string/distance_title">
            <intent
                android:action="android.intent.action.PICK_ACTIVITY"
                android:targetClass="com.vcu.teamnapp.SettingsActivity2"
                android:targetPackage="com.vcu.teamnapp"/>
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notifications_header">

        <SwitchPreferenceCompat
            app:defaultValue="@string/notification_summary_off"
            app:key="notifications switch"
            app:summaryOff="@string/notification_summary_off"
            app:summaryOn="@string/notification_summary_on"
            app:title="@string/notifications_title" />

        <ListPreference
            android:layout_width="match_parent"
            app:defaultValue="Notifications on all alerts"
            app:entries="@array/notification_entries"
            app:entryValues="@array/notification_values"
            app:key="notification"
            app:title="@string/notifications_title2"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/location_header">

        <Preference
            android:summary="Reminder: Don't forget to enable location services!"
            android:title="@string/location_title">
            <intent
                android:action="android.intent.action.PICK_ACTIVITY"
                android:targetClass="com.vcu.teamnapp.SettingsActivity2"
                android:targetPackage="com.vcu.teamnapp"/>
        </Preference>
<!--        <SwitchPreferenceCompat-->
<!--            app:defaultValue="@string/location_summary_off"-->
<!--            app:key="location"-->
<!--            app:summaryOff="@string/location_summary_off"-->
<!--            app:summaryOn="@string/location_summary_on"-->
<!--            app:title="@string/location_title" />-->

    </PreferenceCategory>

</PreferenceScreen>